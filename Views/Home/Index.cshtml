@model StorageListModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h2>Список доступних Blob Storage</h2>
            <ul class="list-group">
                @foreach (var containerName in Model.Names)
                {
                    <li class="list-group-item">
                        <a asp-controller="Storage" asp-action="Index" asp-route-name="@containerName">
                            @containerName
                        </a>
                    </li>
                }
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Створити новий storage</h2>
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>Ім'я контейнера:</label>
                    <input asp-for="NewContainerName" type="text" class="form-control" id="newContainerName">
                    <span asp-validation-for="NewContainerName" class="text-danger" ></span>
                </div>
                <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Створити</button>
            </form>
        </div>

    </div>
</div>

